@using Externalization
@model Miam.Web.ViewModels.Restaurant.RestaurantEditViewModel

<h2 id="edit-restaurant-page">@UiText.Restaurant.UPDATE_RESTAURANT</h2>
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">@UiText.Restaurant.RESTAURANT</h3>
            </div>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h3>@UiText.Restaurant.RESTAURANT_ADDRESS</h3>

                            @Html.HiddenFor(model => model.Id)

                            <div class="label_field">@Html.LabelFor(model => model.Name, "Nom") </div>
                            <div class="editor_field" id="restaurant_name_field"> @Html.EditorFor(model => model.Name) </div>
                            <div class="validation_field">@Html.ValidationMessageFor(model => model.Name)</div>

                            <div class="label_field"> @Html.LabelFor(model => model.City, "Ville") </div>
                            <div class="editor_field" id="restaurant_city_field"> @Html.EditorFor(model => model.City) </div>
                            <div class="validation_field">@Html.ValidationMessageFor(model => model.City)</div>

                            <div class="label_field"> @Html.LabelFor(model => model.Country, "Pays") </div>
                            <div class="editor_field" id="restaurant_contry_field"> @Html.EditorFor(model => model.Country) </div>
                            <div class="validation_field">@Html.ValidationMessageFor(model => model.Country)</div>

                        </div>
                        <div class="col-md-6">
                            <h3>@UiText.Restaurant.CONTACT_DETAILS</h3>

                            @Html.EditorFor(model => model.ContactDetailViewModel)

                        </div>

                    </div>
                    <input class="btn btn-sm btn-success" id="submit_button" type="submit" value=@UiText.Buttons.CONFIRM />
                    @Html.ActionLink(UiText.Buttons.CANCEL, MVC.Restaurant.Index(), new { @class = "btn btn-sm btn-danger" })
                </div>
            }
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">@UiText.Review.REVIEWS</h3>
            </div>
            <div class="panel-body">
                @foreach (var review in Model.ReviewsViewModel)
                {
                    <div>
                        @review.Body (<i>@review.WriterName</i>) @review.Rating / 5
                    </div>
                }
            </div>
        </div>
    </div>
</div>

