@model Miam.Web.ViewModels.Restaurant.Delete

<h2>Effacer un restaurant</h2>

@using (Html.BeginForm())
{
    <fieldset>
        <legend>Restaurant</legend>

        <div class="display_field"> @Html.DisplayFor(model => model.Name) </div>
        <div class="display_field"> @Html.DisplayFor(model => model.City) </div>
        <div class="display_field"> @Html.DisplayFor(model => model.Country) </div>

        <div>
            <input class="btn btn-sm btn-success" type="submit" value="Confirmer" />
            @Html.ActionLink("Annuler", MVC.Restaurant.Index(), new { @class = "btn btn-sm btn-danger" })
        </div>

    </fieldset>
}



